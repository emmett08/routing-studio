{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "vscode"]
  },
  "include": ["src/extension", "src/bridge", "src/routing"],
  "exclude": ["**/*.test.ts"]
}
